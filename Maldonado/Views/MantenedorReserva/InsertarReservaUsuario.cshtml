@model CapaEntidad.entReserva

@{
    ViewBag.Title = "Reservaciones";
    ViewBag.image = "/Contents/images/slider-3.jpg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

}

@using CapaEntidad
@{
    entUsuario u = (entUsuario)Session["usuario"];
}

<section class="section contact-section" id="next">
    <div class="container">
        <div class="row">

            <div class="col-md-7" data-aos="fade-up" data-aos-delay="100">

                <form action="#" method="post" class="bg-white p-md-5 p-4 mb-5 border">
                    <div class="col-md-6 form-group" style="display: table-cell;vertical-align: middle;text-align: center;">
                        <label class="text-black font-weight-bold display-4" for="name">¡Reserva aqui @u.nomUsuario!</label>
                    </div>
                    <div class="row">

                        <div class="col-md-6 form-group">
                            <label class="text-black font-weight-bold" for="name">Check In</label>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.fechaIncioReserva, new { @class = "form-control", @id = "checkin_date", placeholder = "Inicio de Reserva", required = true })
                                @Html.ValidationMessageFor(model => model.fechaIncioReserva)
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="text-black font-weight-bold" for="phone">Check Out</label>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.fechaFinReserva, new { @class = "form-control", @id = "checkin_date", placeholder = "Fin de Reserva", required = true })
                                @Html.ValidationMessageFor(model => model.fechaFinReserva)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="text-black font-weight-bold" for="email">¿Que habitacion Deseas?</label>
                            <div>
                                @Html.DropDownList("cboHabitacion", (SelectList)ViewBag.listaHabitacion, "<seleccionar>", new { @class = "custom-select", @id = "inputState", required = true })
                            </div>
                        </div>
                    </div>


                    <div class="row mb-4">
                        <div class="col-md-12 form-group">
                            <label class="text-black font-weight-bold" for="message">¿Alguna Peticion Especial?</label>
                            <textarea name="message" id="message" class="form-control " cols="30" rows="8"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="submit" value="¡Reservar Ya!" class="btn btn-primary text-white py-3 px-5 font-weight-bold">
                        </div>
                    </div>
                </form>

            </div>
            <div class="col-md-5" data-aos="fade-up" data-aos-delay="200">
                <div class="row">
                    <div class="col-md-10 ml-auto contact-info">
                        <p><span class="d-block">Address:</span> <span class="text-black">  Urb. La Merced, Trujillo-Perú | Calle, Jose Antonio Andueza #289</span></p>
                        <p><span class="d-block">Phone:</span> <span class="text-black"> 51-44-200442 | 51-44-207682 | 51-44-618430</span></p>
                        <p><span class="d-block">Email:</span> <span class="text-black"> reservas@laposadadelrey-peru.com</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

